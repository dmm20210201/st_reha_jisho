<div class="container">
  <h2>新規ユーザー登録</h2>
  <div class='row'>
    <div class='col-md-12'>

      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :氏名 %><br />
          <%= f.text_field :name, autofocus: true, placeholder:"言語 太郎" %>
        </div>

        <div class="field">
          <%= f.label :氏名（カナ） %><br />
          <%= f.text_field :name_kana, placeholder:"ゲンゴ タロウ" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autocomplete: "email", placeholder:"..@.."%>
        </div>

        <div class="field">
          <%= f.label :所属 %><br />
          <%= f.text_field :affiliation, placeholder:"◯◯病院" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワードの確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        </br>

        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
