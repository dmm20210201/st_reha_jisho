<!DOCTYPE html>
<html>
  <head>
    <title>StRehaJisho</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <%= search_form_for @search do |f| %>
                  <%= f.label'訓練検索' %>
                  <%= f.search_field :training_name_or_speech_pathological_findings_or_adaptation_precautions_cont, required:"true", placeholder:'訓練、所見、適応' %>
                  <%= f.submit "検索" %>
                <% end %>
                <li class="nav-item">
                  <%= link_to 'マイページ', user_path(current_user.id), class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to '訓練一覧', rehabilitations_path,class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to '新規投稿', new_rehabilitation_path,class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete,class: 'nav-link text-dark' %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to 'Top', root_path,class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'About', homes_about_path,class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログイン", new_user_session_path,class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録", new_user_registration_path,class: 'nav-link text-dark' %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </navi>
    </header>
    <main class="mb-auto">
      <%= yield %>
    </main>
  </body>
</html>
