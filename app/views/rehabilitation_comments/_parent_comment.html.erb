  <% parent_comment = rehabilitation_comments.find(rehabilitation_comment.reply_comment) %>
  <%= render 'rehabilitation_comments/parent_comment', rehabilitation_comments: rehabilitation_comments, rehabilitation_comment: parent_comment, parents: parents %>
