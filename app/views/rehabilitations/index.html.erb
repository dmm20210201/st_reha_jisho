<div class="container">
  <div class='row'>
    <div class='col-md-12'>
      <h2>訓練一覧</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>投稿者</th>
            <th>訓練名</th>
            <th>いいね数</th>
            <th>コメント数</th>
            <th>投稿日時</th>
          </tr>
        </thead>
        <tbody>
          <% @rehabilitations.each do |rehabilitation| %>
            <tr>
              <td><%= attachment_image_tag rehabilitation.user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg" %>
                <%= rehabilitation.user.name %></td>
              <td><%= link_to rehabilitation_path(rehabilitation.id) do %>
                <%= rehabilitation.training_name %>
                <% end %>
              </td>
              <td></td>
              <td></td>
              <td><%= rehabilitation.created_at.to_s(:datetime) %></td>
            </tr>
          <% end %>
          <%= paginate @rehabilitations %>
        </tbody>
      </table>
    </div>
  </div>
</div>