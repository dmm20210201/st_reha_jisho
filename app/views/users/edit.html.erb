<div class="edit_field">
  <h2>ユーザー編集</h2>
  <%= form_with model:@user, local:true do |f| %>
    <label for="inputName">氏名</label>
    <%= f.text_field :name, id:"inputName" %>
    <label for="inputName_kana">氏名（カナ）</label>
    <%= f.text_field :name_kana, id:"inputName_kana" %>
    <label for="email">メールアドレス</label>
    <%= f.email_field :email, id:"email" %>
    <label for="affiliation">所属</label>
    <%= f.text_field :affiliation, id:"affiliation" %>
    <label for="introduction">紹介文</label>
    <%= f.text_area :introduction, id:"introduction" %>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
    <label for="inputImage">プロフィール画像</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
    <%= f.submit "変更を保存" %>
  <% end %>
</div>