<div class="container">
  <h2>ユーザー編集</h2>
  <div class='row'>
    <div class='col-md-12'>
      <div class="edit_field">
        <%= form_with model:@user, local:true do |f| %>
          <label for="inputName">氏名</label>
          <%= f.text_field :name, id:"inputName", placeholder:"言語 太郎" %>
          <label for="inputName_kana">氏名（カナ）</label>
          <%= f.text_field :name_kana, id:"inputName_kana", placeholder:"ゲンゴ タロウ" %>
          <label for="email">メールアドレス</label>
          <%= f.email_field :email, id:"email" %>
          <label for="affiliation">所属</label>
          <%= f.text_field :affiliation, id:"affiliation", placeholder:"◯◯病院"%>
          <label for="introduction">紹介文</label>
          <%= f.text_area :introduction,rows:'4', cols:"30", id:"introduction", placeholder:"経歴、STとしてのモットー、座右の銘など自由にご記入ください" %>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
          <label for="inputImage">ユーザー画像</label>
          <%= f.attachment_field :profile_image, placeholder: "ユーザー画像" %>
          <%= f.submit "変更を保存" %>
        <% end %>
      </div>
    </div>
  </div>
</div>